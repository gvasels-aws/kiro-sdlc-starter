{
  "sdlc": {
    "defaultPhase": 1,
    "specPrefix": "",
    "timeout": {
      "phase": 300000,
      "command": 60000
    },
    "quality": {
      "coverageThreshold": 80,
      "lintErrors": 0,
      "securityLevel": "high"
    },
    "output": {
      "format": "human",
      "verbose": false,
      "timestamps": true
    },
    "mcp": {
      "specWorkflow": {
        "autoApprove": false,
        "approvalTimeout": 86400000
      }
    }
  },
  "phases": {
    "1": {
      "name": "SPEC",
      "description": "Define requirements and design",
      "steering": "phases/01-spec.md"
    },
    "2": {
      "name": "TEST",
      "description": "Write failing tests (TDD Red)",
      "steering": "phases/02-test.md"
    },
    "3": {
      "name": "CODE",
      "description": "Implement to pass tests (Green)",
      "steering": "phases/03-code.md"
    },
    "4": {
      "name": "BUILD",
      "description": "Lint, type check, coverage",
      "steering": "phases/04-build.md",
      "commands": {
        "lint": "ruff check src/ tests/",
        "typeCheck": "mypy src/",
        "test": "pytest --cov=src --cov-fail-under=80"
      }
    },
    "5": {
      "name": "QUALITY_GATE",
      "description": "Security scan, code review",
      "steering": "phases/05-quality-gate.md",
      "commands": {
        "security": "bandit -r src/",
        "dependencies": "safety check -r requirements.txt"
      }
    },
    "6": {
      "name": "DOCS",
      "description": "Generate documentation",
      "steering": "phases/06-docs.md"
    }
  }
}
